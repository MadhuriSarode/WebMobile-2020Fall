<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/btnStartRecord"
        android:layout_width="177dp"
        android:layout_height="57dp"
        android:onClick="startrecord"
        android:text="Start Record"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnStartPlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.594" />

    <Button
        android:id="@+id/btnStopRecord"
        android:layout_width="141dp"
        android:layout_height="66dp"
        android:layout_below="@+id/btnStartRecord"
        android:layout_marginBottom="228dp"
        android:onClick="stopRecord"
        android:text="Stop Play"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toEndOf="@+id/btnStartPlay"
        app:layout_constraintTop_toBottomOf="@+id/btnStopPlay"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnStartPlay"
        android:layout_width="149dp"
        android:layout_height="66dp"
        android:layout_below="@+id/btnStopRecord"
        android:onClick="playRecord"
        android:text="Play"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.663" />

    <Button
        android:id="@+id/btnStopPlay"
        android:layout_width="187dp"
        android:layout_height="55dp"
        android:layout_below="@+id/btnStartPlay"
        android:layout_marginTop="228dp"
        android:onClick="stopPlay"
        android:text="Stop Record"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>